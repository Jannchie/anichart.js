{
  "compilerOptions": {
    "outDir": "lib",
    "declarationDir": "typings",
    "noImplicitAny": false,
    "module": "ES6",
    "target": "es5",
    "declarationMap": false,
    "declaration": true,
    "inlineSourceMap": true,
    "moduleResolution": "Node",
    "allowUmdGlobalAccess": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
