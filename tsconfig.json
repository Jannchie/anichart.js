{
    "compilerOptions": {
        "outDir": "lib",
        "declarationDir": "typings",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "declarationMap": true,
        "declaration": true,
        "inlineSourceMap": true,
        "typeRoots": [
            "./src/**/*",
            "./typings/**/*",
            "./node_modules/@types"
        ],
        "moduleResolution":"Node",
        "allowUmdGlobalAccess": true,
        "esModuleInterop": true,
        "allowJs": true
    },
    "compileOnSave": true,
    "include": [
        "./src/**/*", "@types", "typings/**/*"
    ],
}